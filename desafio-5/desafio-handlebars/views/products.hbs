<div class="row mt-5 d-flex justify-content-center">
    <div class="col-md-8">

        {{#if productos.length }} 
            <table class="table table-dark table-striped text-center">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Image</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{price}}</td>
                            <td>
                                <div class="text-center">
                                    <img src={{thumbnail}} alt="{{producto.title}}" height="50px" /> 

                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <div class="alert alert-success" role="alert">
                <p>Products not found</p>
            </div>      
        {{/if}}            
    </div>
</div>