<div class="row d-flex justify-content-center">
    <div class="col-md-4 mt-4">
        <div class="card">
            <h5 class="card-header">Create a Product</h5>
            <div class="card-body">
                <form action="/productos" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" />
                    </div>

                    <div class="mt-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" class="form-control" id="price" name="price">
                    </div>

                    <div class="mt-3">
                        <label for="thumbnail" class="form-label">Image Url</label>
                        <input type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="EJ: https://cdn3.iconfinder.com/data/icons/seo-162/96/monitor_screen_computer_search_find_browser_website-128.png">
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>