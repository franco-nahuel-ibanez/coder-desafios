extends layout

block contenido
    div(class="row d-flex justify-content-center")
        div(class="col-md-4 mt-4")
            div(class="card")
                h5(class="card-header") Create a Product
                div(class="card-body")
                    form(action="/productos" method="POST")
                        div(class="mb-3")
                            label(for="title" class="form-label") Title
                            input(type="text" class="form-control" id="title" name="title")

                        div(class="mt-3")
                            label(for="price" class="form-label") Price
                            input(type="text" class="form-control" id="price" name="price")

                        div(class="mt-3")
                            label(for="thumbnail" class="form-label") Image Url
                            input(type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="EJ: https://cdn3.iconfinder.com/data/icons/seo-162/96/monitor_screen_computer_search_find_browser_website-128.png")

                        button(type="submit" class="btn btn-primary mt-3") Save
